<body>
  <h1>Shipment Management</h1>
  <table>
    <thead>
      <tr>
        <th>Shipment ID</th>
        <th>Carrier</th>
        <th>Pickup</th>
        <th>Delivery</th>
      </tr>
    </thead>
    <tbody>
      <% shipments.forEach((shipment) => { %>
        <tr>
          <td><%= shipment.id %></td>
          <td><%= shipment.carrier %></td>
          <td><%= shipment.pickup %></td>
          <td><%= shipment.delivery %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
